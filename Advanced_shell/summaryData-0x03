#!/bin/bash
# Summarize Pokémon Data and Generate CSV Report

INPUT_DIR="pokemon_data"
OUTPUT_CSV="pokemon_report.csv"

# Check if input directory exists and has JSON files
if [ ! -d "$INPUT_DIR" ] || [ -z "$(ls -A "$INPUT_DIR"/*.json 2>/dev/null)" ]; then
    echo "Error: No Pokémon JSON data found in '$INPUT_DIR'." >&2
    exit 1
fi

# Write CSV headers
echo "Name,Height (m),Weight (kg)" > "$OUTPUT_CSV"

# Extract data from each JSON and append to CSV
for file in "$INPUT_DIR"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/^./\u&/')
    height=$(jq -r '.height / 10' "$file" | awk '{printf "%.1f", $0}')
    weight=$(jq -r '.weight / 10' "$file" | awk '{printf "%.1f", $0}')
    echo "$name,$height,$weight" >> "$OUTPUT_CSV"
done

# Display CSV location
echo "CSV Report generated at: $OUTPUT_CSV"
echo

# Output CSV contents
cat "$OUTPUT_CSV"
echo

# Calculate averages using awk (skip header)
awk -F',' 'NR > 1 {
    height += $2
    weight += $3
    count++
}
END {
    if (count > 0) {
        printf "Average Height: %.2f m\n", height / count
        printf "Average Weight: %.2f kg\n", weight / count
    }
}' "$OUTPUT_CSV"
