#!/bin/bash
# Batch Pok√©mon Data Retrieval Script

POKEMONS=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
API_URL="https://pokeapi.co/api/v2/pokemon"
OUTPUT_DIR="pokemon_data"

# Create output directory if it doesn't exist
mkdir -p "$OUTPUT_DIR"

for pokemon in "${POKEMONS[@]}"; do
    echo "Fetching data for $pokemon..."

    RESPONSE=$(curl -s -w "%{http_code}" -o "$OUTPUT_DIR/$pokemon.json" "$API_URL/$pokemon")
    STATUS=${RESPONSE: -3}

    if [ "$STATUS" == "200" ]; then
        echo "Saved data to $OUTPUT_DIR/${pokemon}.json "
    else
        echo "Failed to fetch data for $pokemon  (HTTP $STATUS)"
        rm -f "$OUTPUT_DIR/$pokemon.json"
    fi

    sleep 2  # Delay to prevent rate limiting
done
